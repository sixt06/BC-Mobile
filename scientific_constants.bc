/* atomic mass unit in kg */
amu      = 1.66057*10^(-27)
/* Bohr radius in m */
a0       = 5.29177*10^(-11)
/* electron radius in m */
re       = 2.81792*10^(-15)
/* molar volume in l/mol */
vmol     = 22.41383
/* proton g factor (lande factor) */
gh       = 5.585
/* gravitational constant m^3/kg*s^2 */
grav     = 6.673*10^(-11)
/* acceleration due to gravity on surface of earth in m/s^2 */
g        = 9.80665
